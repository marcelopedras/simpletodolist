<div id='left_box'>
    <div id='actions'>
        <%= image_button('add list', 'add', :id=>'add_list', :alt => 'Adicione uma nova lista')%>
        <%= image_button('find list', 'zoom', :id=>'find_list', :alt => 'Procure por listas públicas')%>
    </div>
    <div id='show_lists'>
      <%= render :partial=> 'lists', :locals => {:list_name => 'My Lists', :lists => @lists, :my_class => 'my_list'}%>
    </div>
    <div id='favorites'>
      <%= render :partial=> 'lists', :locals => {:list_name => 'My Favorites', :lists => @favorites, :my_class => 'favorites'}%>
    </div>
</div>

<div id='rigth_box'>
    <div id='manage_lists'>
      <div id='form_list_div' class="hidden">
         <h2>Adicione uma nova lista de tarefas</h2>
         <%= render :partial => 'add_list', :locals => {:list => List.new}%>
      </div>

      <div id='form_task_div' class="hidden">
        <h2>Adicione uma nova tarefa à sua lista</h2>
        <%= render :partial => 'add_task', :locals => {:task => Task.new, :submite_task_button => "submite_task_button"}%>
      </div>

      <div id='form_find_favorite' class="hidden">
        <%= render :partial => 'find_list_form'%>
      </div>
    </div>
</div>



















